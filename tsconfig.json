{
        "compilerOptions": {
                // main.tsxでApp.jsをimportしてしまったため、importするファイルの拡張子を記載するようにする
                "allowImportingTsExtensions": true,
                "noEmit": true,
                "module": "ESNext",
                "moduleResolution": "Bundler",
                "skipLibCheck": true,
                "paths": {
                        "@/*": ["./src/*"]
                },
                "jsx": "react-jsx",
                "lib": ["dom", "es2018"]
        },
        "include": [
                "./src/**/*"
        ]
}


